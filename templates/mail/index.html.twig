{% extends 'base.html.twig' %}
{% block title %}Contact{% endblock %}
{% block body %}

<h2 class="text-center anonymous-pro-bold my-5">Envoyez-nous un message</h2>

<div class="container col-12 col-md-8 mx-auto p-4 contactField rounded">

    {{ form_start(form) }}

    <div class="d-flex flex-column flex-md-row gap-4">
        <!-- Colonne gauche -->
        <div class="flex-md-fill d-flex flex-column gap-3">
            <div>
                {{ form_label(form.email, 'Votre E-mail :') }}
                {{ form_widget(form.email, { 'attr': { 'class': 'form-control' } }) }}
            </div>

            <div>
                {{ form_label(form.objet, 'Le sujet :') }}
                {{ form_widget(form.objet, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <!-- Colonne droite -->
        <div class="flex-md-fill d-flex flex-column gap-3">
            <div class="flex-grow-1">
                {{ form_label(form.message, 'Votre message :') }}
                {{ form_widget(form.message, {'attr': {'class': 'form-control h-100', 'rows':6}}) }}
            </div>

            <div class="mt-5 p-3 text-center">
                {{ form_row(form.save,  {'attr': {'class': 'ButtonClass'}}) }}
            </div>
        </div>
    </div>

    {{ form_end(form) }}
</div>

{% endblock %}
