{# templates/security/login.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="d-flex justify-content-center align-items-center min-vh-100 bg-light anonymous-pro-bold">
    <div class="card shadow-lg border-3" style="border-color: orange; border-radius: 20px; width: 400px;">
        <div class="card-body p-4">
            <h2 class="text-center mb-4 text-orange fw-bold">Connexion</h2>

            {% if error %}
                <div class="alert alert-danger text-center">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <form action="{{ path('app_login') }}" method="post">
                <div class="mb-3">
                    <label for="email" class="form-label fw-semibold">Email</label>
                    <input type="email" id="email" name="_username"
                           value="{{ last_username }}"
                           class="form-control border-orange rounded-pill"
                           placeholder="Entrez votre email"
                           required autofocus>
                </div>

                <div class="mb-4">
                    <label for="password" class="form-label fw-semibold">Mot de passe</label>
                    <input type="password" id="password" name="_password"
                           class="form-control border-orange rounded-pill"
                           placeholder="Votre mot de passe"
                           required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="d-grid">
                    <button type="submit" class="btn btn-orange rounded-pill fw-semibold py-2">
                        Se connecter
                    </button>
                </div>
            </form>

            <p class="text-center mt-3 mb-0">
                Pas encore de compte ?
                <a href="{{ path('app_register') }}" class="text-orange fw-semibold text-decoration-none">
                    Inscrivez-vous
                </a>
            </p>
        </div>
    </div>
</div>

<style>
    .text-orange {
        color: orange;
    }
    .border-orange {
        border: 2px solid orange;
    }
    .btn-orange {
        background-color: orange;
        color: white;
        transition: all 0.3s ease;
    }
    .btn-orange:hover {
        background-color: darkorange;
        color: #fff;
    }
</style>
{% endblock %}