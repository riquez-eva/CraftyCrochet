{% extends 'base.html.twig' %}
{% block title %}Détails{% endblock %}
{% block body %}
<img class="mx-auto d-block m-5" src="/pictures/DetailsHeading.svg" alt="Details">



<div class="container my-5 anonymous-pro-bold">
  <div class="category-card-in shadow-sm p-3 mx-auto ">
    <div class="row g-0 align-items-center">
      <!-- Image -->
      <div class="col-md-4">
        <img src="/pictures/ton-image.jpg" alt="Produit" class="img-fluid rounded-start">
      </div>

      <!-- Contenu texte -->
      <div class="col-md-8 d-flex flex-column justify-content-between position-relative">
