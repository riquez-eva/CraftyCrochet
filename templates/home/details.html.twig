          <h5 class="card-title fw-bold">Title de dingue</h5>
          <p class="card-text text-muted">Description de la mort qui tue</p>
        </div>

        <!-- Texte + bouton alignés -->
        <div class="position-absolute bottom-0 end-0 m-3 d-flex align-items-center gap-2">
          <p class="mb-0">Add To Cart</p>
          <a href="#">
            <img src="/pictures/PlusButton.svg" alt="Add to Cart" class="btn-add-to-cart" />
          </a>
        </div>

      </div>
    </div>
  </div>
</div>
